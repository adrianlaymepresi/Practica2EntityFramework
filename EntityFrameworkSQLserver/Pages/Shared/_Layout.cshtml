<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntityFrameworkSQLserver</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EntityFrameworkSQLserver.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="top-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <a class="navbar-brand titulo-app m-0 text-black" asp-area="" asp-page="/Index">CONTROL TAREAS 👤</a>
            <button id="toggleSidebar" class="btn btn-sm btn-toggle">☰ MENU</button>
        </div>
    </header>

    <div class="wrapper d-flex">
        <nav id="sidebar" class="sidebar">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-page="/Index">🏠 Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">✅ Tareas Finalizadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">⚠️ Tareas Canceladas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">🔒 Privacidad</a>
                </li>
            </ul>
        </nav>

        <div id="content" class="content flex-grow-1">
            <main role="main" class="py-3">
                @RenderBody()
            </main>

            <footer class="footer-app text-center">
                <div class="container">
                    By: Ignacio Adrian Layme Delgado; 2025; <a class="link-contraste" href="#">Privacidad</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const boton = document.getElementById('toggleSidebar')
        if (boton) {
            boton.onclick = () => document.body.classList.toggle('sidebar-cerrado')
        }
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

        